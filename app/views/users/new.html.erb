
<h1>Sign up</h1>

<%= form_for @user do |f| %>

  <%= f.label :name, 'Username:' %>
  <%= f.text_field :name %><br><br>

  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password %><br><br>

  <%= f.label :password_confirmation, 'Confirm password:' %>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.submit %>
<% end %>
